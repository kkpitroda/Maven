pipeline
{
	agent any
	tools
	{
		echo 'MAVEN_HOME'
	}
	
	stages
	{
		stage('Welcome Stage')
		{
			steps
			{
				echo 'Welcome to Jenkins Pipeline'
			}
		}
		
		stage('Clean Stage')
		{
			steps
			{
				sh 'mvn clean'
			}
		}	
        stage('Clean Success Stage')
		{
			steps
			{
				echo 'clean success'
			}
		}	
		stage('Test Stage')
		{
			steps
			{
				echo 'mvn test'
			}
		}		
		stage('Build & Install Stage')
		{
			steps
			{
				echo 'mvn install'
			}
		}		
		
		stage('Build Success')
		{
			steps
			{
				echo 'Build successful'
			}
		}		
      }
}

